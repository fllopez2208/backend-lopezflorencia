<article>
    <h1>Carrito: {{cart._id}}</h1>
    
    <table id="main">
        <tr>
            <th>ID del Carrito:</th>
            <th>ID del Producto:</th>
            <th>Cantidad:</th> 
            <th>Acciones</th>
        </tr>
        
        
        <tr> 
            <td>{{carts._id}}</td>
            <td>{{carts.products}}</td>
            <td>{{carts.products.quantity}}</td>
            <td>
                <form action="/api/carts/{{this._id}}/{{this.products.product}}" method="PUT">
                    <input type="number" name="quantity" value="{{this.products.quantity}}" min="1">
                    <input type="submit" value="Actualizar Cantidad">
                </form>
                <form action="/api/carts/{{this._id}}/{{this.productId}}" method="DELETE">
                    <input type="submit" value="Eliminar Producto">
                </form>
            </td>
        </tr>
      
    </table>
    <form action="/api/carts/{{carts._id}}" method="DELETE">
        <input type="submit" value="Eliminar Carrito">
    </form>


</article>
