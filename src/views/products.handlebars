<article>
<header><h1>Productos</h1></header>
<table class="container">
    <tr>
        <th>ID:</th>
        <th>Titulo:</th>
        <th>Descripción:</th> 
        <th>Precio:</th> 
        <th>Código:</th>  
        <th>Stock:</th> 
    </tr>
    {{#each products}}
    <tr> 
        <td>{{this._id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.code}}</td>
        <td>{{this.stock}}</td>
        <td> 
            <form action="/api/carts" method="post">
                <input type="hidden" name="_id" value="{{this._id}}">
                <input type="submit" value="Agregar al carrito">
            </form>
        </td>
    </tr>
    {{/each}}
</table>
</article>